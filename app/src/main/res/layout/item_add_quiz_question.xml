<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_background">

        <EditText
            android:id="@+id/editTextAddQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColorHint="@color/colorPrimary"
            android:hint="@string/add_your_question_here"/>

        <EditText
            android:id="@+id/editTextAddAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColorHint="@color/colorPrimary"
            android:hint="@string/first_answer"/>

        <EditText
            android:id="@+id/editTextAddAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColorHint="@color/colorPrimary"
            android:hint="@string/second_answer"/>

        <EditText
            android:id="@+id/editTextAddAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColorHint="@color/colorPrimary"
            android:hint="@string/third_answer"/>

        <EditText
            android:id="@+id/editTextAddAnswer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColorHint="@color/colorPrimary"
            android:hint="@string/fourth_answer"/>

        <Spinner
            android:id="@+id/spinnerAnswerIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonConfirmQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="@string/confirm"
        android:elevation="4dp"
        android:background="@drawable/button_background"/>

</LinearLayout>